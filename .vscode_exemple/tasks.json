{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Meson",
      "type": "shell",
      "command": "meson setup builddir",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Configura o Meson build system"
    },
    {
      "label": "Build Meson",
      "type": "shell",
      "command": "ninja -C builddir",
      "group": "build",
      "dependsOn": "Configure Meson",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Compila o projeto usando Ninja"
    },
    {
      "label": "Test Meson",
      "type": "shell",
      "command": "meson test -C builddir",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build and Test com Meson",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Meson",
        "Test Meson"
      ]
    }
  ]
}